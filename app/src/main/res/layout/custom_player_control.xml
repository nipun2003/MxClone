<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/controller_bg"
    android:padding="@dimen/extra_small_spacing"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/medium_spacing"
        android:padding="@dimen/extra_small_spacing"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/medium_spacing"
            android:layout_toStartOf="@id/scaleType"
            android:orientation="horizontal"
            android:padding="@dimen/small_spacing"
            android:gravity="start|center_vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:padding="@dimen/small_spacing"
                android:background="@drawable/ripple_effect"
                app:srcCompat="@drawable/ic_back_arrow" />
            <Space
                android:layout_width="@dimen/small_spacing"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/panchayat"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/scaleType"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_toStartOf="@id/more"
            android:layout_centerVertical="true"
            android:padding="@dimen/small_spacing"
            android:layout_marginEnd="@dimen/small_spacing"
            android:background="@drawable/ripple_effect_round"
            app:srcCompat="@drawable/ic_fit_width" />

        <ImageView
            android:id="@+id/more"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="@dimen/small_spacing"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/medium_spacing"
            android:background="@drawable/ripple_effect_round"
            app:srcCompat="@drawable/exo_ic_settings" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/exo_prev"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/ripple_effect_round"
            android:padding="@dimen/small_spacing"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_skip_prev" />

        <ImageButton
            android:id="@+id/exo_rew"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/ripple_effect_round"
            android:padding="@dimen/small_spacing"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_fb_10" />

        <ImageButton
            android:id="@id/exo_play"
            style="@style/ExoMediaButton.Play"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="@dimen/small_spacing"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@id/exo_pause"
            style="@style/ExoMediaButton.Pause"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:padding="@dimen/small_spacing" />

        <ImageButton
            android:id="@+id/exo_ffwd"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/ripple_effect_round"
            android:padding="@dimen/small_spacing"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_ff_10" />

        <ImageButton
            android:id="@+id/exo_next"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="@drawable/ripple_effect_round"
            android:padding="@dimen/small_spacing"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_skip_next" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/extra_large_spacing"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            tools:text="00:00" />

        <TextView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/exo_position"
            android:text=" / "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/divider"
            android:textColor="@color/white"
            tools:text="03:28" />
    </RelativeLayout>

    <View
        android:id="@id/exo_progress_placeholder"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginBottom="@dimen/medium_spacing"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>